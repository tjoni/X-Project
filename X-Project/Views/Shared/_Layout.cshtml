<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - iWish</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="wrapper">
        <div id="header">

            <img src="~/Images/iWIsh-icon.png"  class="iWishImage"/>
            <div class="menuicon">
                <span style="font-size: 30px; cursor: pointer; background: white;" onclick="openNav()">&#x2630;</span>
            </div>
            <div id="myNav" class="overlay">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <div class="overlay-content">
                    <a href="@Url.Action("Index", "Profile")">Profile</a>
                    <a href="@Url.Action("Index", "Friends")">Friends</a>
                    <a href="@Url.Action("Index", "Contact")">Contact us</a>
                    <a>@Html.Partial("_LoginPartial")</a>
                </div>
            </div>
        </div>
        <div class="container">
            <div id="content">@RenderBody()</div>
        </div>
        <div id="footer"><h4>&copy; @DateTime.Now.Year - iWish</h4></div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Menu.js"></script>
    <script src="~/Scripts/addWishPopUp.js"></script>
    <script src="~/Scripts/wishListUpdate.js"></script>
    <script src="~/Scripts/waat.js"></script>
    <script src="~/Scripts/deleteWishjs.js"></script>
</body>
</html>
